<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picker_header_scene_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <TextView
        android:id="@+id/header_text_action"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/picker_default_margin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/action_bar_title_text_color"
        android:textSize="20sp"
        android:text="@null" />

    <!-- visibility gone causes issues with findbyid, use invisible and 0dp height instead -->
    <TextView
        android:id="@+id/header_text_location"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/picker_default_margin"
        android:singleLine="true"
        android:text="@null" />

</LinearLayout>