<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cloud_container"
    android:layout_marginBottom="286dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cloud_background"
        android:id="@+id/cloud_background"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cloud_line"
        android:scaleType="fitEnd"
        android:layout_alignBottom="@id/cloud_background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flying_folder"
        android:src="@drawable/flying_folder_avd"
        android:layout_centerInParent="true"/>

</RelativeLayout>